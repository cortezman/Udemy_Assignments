@model CityWeather
@{
    string colorClass = string.Empty;
}

@if (Model.TemperatureFahrenheit < 44)
    colorClass = "blue-back";
else if (Model.TemperatureFahrenheit >= 44 && Model.TemperatureFahrenheit <= 74)
    colorClass = "yellow-back";
else
    colorClass = "orange-back";



<div class="box w-30 @colorClass padding-left" >
    <div class="flex-borderless">
        <div class="w-50">
            <h2>@Model.CityName</h2>
            <h4 class="text-dark-grey">@Model.DateAndTime.ToString("hh:mm tt")</h4>
            <h4>
                <a href="/weather/@Model.CityUniqueCode">Details</a>
            </h4>
        </div>
        <div class="border-left w-50">
            <h1 class="margin-left">@Model.TemperatureFahrenheit <sup class="text-grey">°F</sup></h1>
        </div>
    </div>
</div>
